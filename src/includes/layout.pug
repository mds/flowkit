    //- Schema.org markup for Google+
    meta(itemprop='name', content='Flowkit')
    meta(itemprop='description', content="Userflows right inside your favorite design tool. Available for Figma, Sketch, and Adobe XD.")
    meta(itemprop='image', content='https://mds-assets.s3.us-east-1.amazonaws.com/flowkit/flowkit-3-card.png?cb=1')

    //- Twitter Card data
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:site', content='@mds')
    meta(name='twitter:title', content='Flowkit')
    meta(name='twitter:description', content="Userflows right inside your favorite design tool. Available for Figma, Sketch, and Adobe XD.")
    meta(name='twitter:creator', content='@mds')

    //- Twitter summary card with large image must be at least 280x150px
    meta(name='twitter:image:src', content='https://mds-assets.s3.us-east-1.amazonaws.com/flowkit/flowkit-3-card.png?cb=1')

    //- Open Graph data
    meta(property='og:title', content='Flowkit')
    meta(property='og:type', content='article')
    meta(property='og:url', content='http://useflowkit.com')
    meta(property='og:image', content='https://mds-assets.s3.us-east-1.amazonaws.com/flowkit/flowkit-3-card.png?cb=1')
    meta(property='og:description', content="Userflows right inside your favorite design tool. Available for Figma, Sketch, and Adobe XD.")
    meta(property='og:site_name', content='Flowkit')

